@model Party.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Спасибо</title>
</head>
<body>
    <div>
        <h1>Спасибо, @Model.Name!</h1>
        @if (Model.WillAttend == true)
        {
            @:Это здорово, что ты приезжаешь. Напитки уже в холодильнике!
        }
        else
        {
            @:Жаль, что вы не можете приехать, но спасибо, что дали нам знать.
        }
    </div>
</body>
</html>